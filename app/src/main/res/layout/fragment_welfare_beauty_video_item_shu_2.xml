<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.quduo.welfareshop.widgets.CustomHeightRoundedImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:custom_base="horizontal"
            app:custom_horizontal_weight="355"
            app:custom_vertical_weight="532" />

        <ImageView
            android:id="@+id/tag_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tag"
            android:layout_alignLeft="@+id/tag"
            android:layout_alignRight="@+id/tag"
            android:layout_alignTop="@+id/tag"
            android:src="@drawable/btn_theme_corner_half_2dp" />

        <TextView
            android:id="@+id/tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:text="黑丝"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_10" />
    </RelativeLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="视频名称"
        android:textColor="@color/title_text_color"
        android:textSize="@dimen/sp_14" />

</LinearLayout>