<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:text="岛国写真"
        android:textColor="@color/title_text_color"
        android:textSize="@dimen/sp_16" />

    <com.quduo.welfareshop.widgets.CustomListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/transparent1"
        android:dividerHeight="@dimen/dp_10"
        android:listSelector="@color/transparent1" />

    <TextView
        android:id="@+id/more_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_more_video"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:paddingTop="@dimen/dp_10"
        android:text="观看更多"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />
</LinearLayout>