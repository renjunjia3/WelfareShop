<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.quduo.welfareshop.widgets.RatioImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:base="horizontal"
        app:horizontal_weight="10"
        app:vertical_weight="14" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:text="我的小姨子"
        android:textColor="@color/title_text_color"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/read_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:drawableLeft="@drawable/ic_novel_read_num"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="阅读:123456"
        android:textColor="@color/des_text_color"
        android:textSize="10sp" />
</LinearLayout>