<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingTop="15dp">

    <com.quduo.welfareshop.widgets.CustomHeightRoundedImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_10"
        app:custom_sriv_left_bottom_corner_radius="360dp"
        app:custom_sriv_left_top_corner_radius="360dp"
        app:custom_sriv_right_bottom_corner_radius="360dp"
        app:custom_sriv_right_top_corner_radius="360dp"
        app:tintMode="src_over" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/des_text_color"
        android:textSize="10sp" />
</LinearLayout>