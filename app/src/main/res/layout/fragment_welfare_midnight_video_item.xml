<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.quduo.welfareshop.widgets.RatioImageView
            android:id="@+id/baseimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:base="horizontal"
            app:horizontal_weight="1080"
            app:vertical_weight="609" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/baseimage"
            android:layout_alignLeft="@+id/baseimage"
            android:layout_alignRight="@+id/baseimage"
            android:layout_alignTop="@+id/baseimage" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_list_video_play" />

        <ImageView
            android:id="@+id/tag_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tag"
            android:layout_alignLeft="@+id/tag"
            android:layout_alignRight="@+id/tag"
            android:layout_alignTop="@+id/tag"
            android:src="@drawable/btn_theme_corner_2dp" />

        <TextView
            android:id="@+id/tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:text="黑丝"
            android:textColor="@color/white"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/video_time"
            android:layout_width="wrap_content"
            android:layout_alignBottom="@+id/image"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:text="01:35"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="5dp"
        android:paddingTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:text="小姨子的诱惑"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/play_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:drawableLeft="@drawable/ic_video_play_number"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="播放:12345"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/follow_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_beauty_video_follow"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="收藏:651234"
            android:textColor="@color/content_text_color"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <TextView
        android:id="@+id/des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:text="姐夫爱上小姨子"
        android:textColor="@color/des_text_color"
        android:textSize="@dimen/sp_12" />

</LinearLayout>