<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_translate"
        android:paddingBottom="2dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="2dp"
        android:text="2018-1-29 09:33"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">

        <com.quduo.welfareshop.widgets.SelectableRoundedImageView
            android:id="@+id/mine_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:sriv_left_bottom_corner_radius="360dp"
            app:sriv_left_top_corner_radius="360dp"
            app:sriv_oval="true"
            app:sriv_right_bottom_corner_radius="360dp"
            app:sriv_right_top_corner_radius="360dp"
            android:layout_alignParentRight="true" />

        <com.quduo.welfareshop.widgets.SelectableRoundedImageView
            android:id="@+id/image"
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:layout_toLeftOf="@+id/mine_avatar"
            app:sriv_left_bottom_corner_radius="5dp"
            android:layout_marginRight="@dimen/dp_10"
            app:sriv_left_top_corner_radius="5dp"
            app:sriv_right_bottom_corner_radius="5dp"
            app:sriv_right_top_corner_radius="5dp" />
    </RelativeLayout>

</LinearLayout>