<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.quduo.welfareshop.widgets.RatioImageView
        android:id="@+id/baseimageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:base="horizontal"
        app:horizontal_weight="1"
        app:vertical_weight="1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/baseimageview"
        android:layout_alignLeft="@+id/baseimageview"
        android:layout_alignRight="@+id/baseimageview"
        android:layout_alignTop="@+id/baseimageview" />
</RelativeLayout>