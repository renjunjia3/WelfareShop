<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.quduo.welfareshop.widgets.RatioImageView
            android:id="@+id/baseimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:base="horizontal"
            app:horizontal_weight="1080"
            app:vertical_weight="608" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/baseimage"
            android:layout_alignLeft="@+id/baseimage"
            android:layout_alignRight="@+id/baseimage"
            android:layout_alignTop="@+id/baseimage" />

    </RelativeLayout>


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="视频名称"
        android:textColor="@color/title_text_color"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/play_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_beauty_video_play"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="播放:651234"
            android:textColor="@color/content_text_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/follow_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_beauty_video_follow"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="收藏:651234"
            android:textColor="@color/content_text_color"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>
</LinearLayout>