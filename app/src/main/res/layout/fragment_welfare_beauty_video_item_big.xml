<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.quduo.welfareshop.widgets.RatioImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:base="horizontal"
        app:horizontal_weight="1080"
        app:vertical_weight="608" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/sp_14"
            tools:text="视频名称1234567894613456" />

        <TextView
            android:id="@+id/play_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/ic_beauty_video_play"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/content_text_color"
            android:textSize="@dimen/sp_12"
            tools:text="播放:651234" />

        <TextView
            android:id="@+id/follow_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_beauty_video_follow"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/content_text_color"
            android:textSize="@dimen/sp_12"
            tools:text="收藏:651234" />
    </LinearLayout>

    <TextView
        android:id="@+id/des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/des_text_color"
        android:textSize="@dimen/sp_12"
        tools:text="你好" />
</LinearLayout>