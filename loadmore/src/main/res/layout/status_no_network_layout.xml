<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/noNetWork_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/status_no_network" />

    <TextView
        android:id="@+id/noNetWork_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/noNetWork_imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="遇到未知问题 请选择刷新"
        android:textColor="#999999" />

    <Button
        android:id="@+id/noNetWork_reload_button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/noNetWork_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_error_btn"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="刷新"
        android:textSize="16sp" />
</RelativeLayout>
